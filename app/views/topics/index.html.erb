<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <p><%= notice %></p>

    <h1>トピック一覧</h1>
    <h2>  <%= link_to "PANDABOOK", root_path, class: 'btn btn-default' %></h2>
  <%= link_to "トピックを投稿する", new_topic_path, class: 'btn btn-default' %>
  <% @topics.each do |topic| %>
    <div class="row">

    <%= link_to topic_path(topic) do %>
    <h4><strong><%= topic.title %></strong></h4>
    <p><%= topic.updated_at %></p>
    <% end %>

  <p>本文:<%= topic.content %></p>

  <p><%= image_tag topic.image, class: "img-responsive" %></p>

  <%= link_to "編集する", edit_topic_path(topic.id) %>
  <%= link_to "削除する", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %>

  <hr>

 <% end %>
<br>

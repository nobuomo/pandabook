<div id="follow_form_<%= user.id %>">

<table class="table">
  <tbody>
    <tr>

  <td><% unless current_user.following?(user) %>
    <%= form_for(current_user.relationships.build(followed_id: user.id), remote: true, authenticity_token: true ) do |f| %>
      <%= f.hidden_field :followed_id %>
      <%= f.submit "友達になる", class: "btn btn-primary" %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.find_by(followed_id: user.id), html: { method: :delete }, remote: true, authenticity_token: true ) do |f| %>
      <%= f.submit "友達", class: "btn" %>
    <% end %>
  <% end %></td>
    <td><%= link_to 'フォロー一覧', followed_users_path, class: "btn btn-small btn-primary" %></td>
    <td><%= link_to 'フォロワー一覧', followers_path, class: "btn btn-large btn-primary"   %></td>


  </tr>
 </tbody>
</table>
</div>

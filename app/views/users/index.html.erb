<%= javascript_include_tag "application" %>

<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= user.email %>
        <%= render 'follow_form', user: user %>
      </div>
  <%= link_to 'Delete', users_path(user), :method => :delete, :confirm => 'Are you sure?' %>
  <% end %>
</div>

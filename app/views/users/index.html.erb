<%= javascript_include_tag "application" %>

<div class="container">
  <h2><strong><%= link_to "PANDABOOK", root_path %> ユーザー一覧</strong></h2＞
  <br>
  <hr>
</div>

  <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
          <%= profile_img(user)%><br>
          <%= user.name %><br>
          <%= user.email %><br><br><br>
        </div>
        <div class="item">
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: "btn btn-large btn-primary", authenticity_token: true %>
        </div>
        <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
        <% end %>

    </div>

  <hr>
<% end %>

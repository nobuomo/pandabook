<div class="col-xs-12 col-sm-8 col-md-8 col-md-offset-1">
  <div class="user_panel">
    <div class="panel panel-default">
      <div class="panel-heading">ユーザー一覧</div>
      <% @users.each do |user| %>
        <li class="list-group-item">
          <strong class="info_name"><%= profile_img(user) %> <%= link_to user.name, user_path(user) %></strong>
          <div class="user-index-btn">
            <tr>
              <td>
                <%= render partial: 'follow_form', locals: { user: user } %>
              </td>

              <td>
                <%= link_to conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post' do %>
                  <i class="fa fa-commenting btn btn-primary" aria-hidden="true">メッセージ</i>
                <% end %>
              </td>
            </tr>
          </div>
        </li>
        <% end %>
    </div>
  </div>
</div>


<div class="col-xs-12 col-sm-8 col-md-8 col-md-offset-1">
  <div class="user_panel">
    <div class="panel panel-default">
      <div class="panel-heading">ユーザー一覧</div>

      <table class="table">
      <% @users.each do |user| %>

          <strong class="info_name"><td><%= profile_img(user) %></td>
            <td> <%= link_to user.name, user_path(user) %></strong></td>

            <td><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
            </td>
          </div>

            <tr>
              <td>
                <%= render partial: 'follow_form', locals: { user: user } %>

              </td>
            </tr>



        <% end %>
      </table>
    </div>
  </div>
</div>

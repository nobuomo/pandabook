<%= javascript_include_tag "application" %>

<div class="container">
  <h2><strong><%= link_to "PANDABOOK", root_path %> ユーザー一覧</strong></h2＞
  <br>
  <hr>
</div>



<table class="table">
  <thead>
    <tr>
      <th>プロファイル</th>
      <th>名前</th>
      <th>email</th>
      <th>メッセージ</th>
    </tr>
  </thead>

  <tbody>

      <% @users.each do |user| %>
          <% if user.id != current_user.id %>
      <tr>
        <td><%= profile_img(user) %></td>
        <td>  <%= user.name %></td>
        <td>  <%= user.email %></td>
        <td>  <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: "btn btn-large btn-primary", authenticity_token: true %></td>
        <td>   <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %></td>
          <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

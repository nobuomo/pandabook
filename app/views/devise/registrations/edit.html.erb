<h2>  <%= link_to "PANDABOOK", root_path, class: 'btn btn-default' %>   マイページ  プロファイル詳細</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= f.error_messages! %>

<section class="function container-fluid">
    <div class="row">
 <div class="profile-images">
  <div class="col-md-3 col-sm-6 col-xs-12">
   <div class= "img-responsive">
    <%= profile_img(@user) if profile_img(@user)%>

   </div>
  </div>
</div>

<div class="col-md-3 col-sm-6 col-xs-12" >
 <div class="profile-image">

  <div class="field">
    <%= f.label :お名前 %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

</div>
</div>

<div class="col-md-3 col-sm-6 col-xs-12">
<div class="profile-image">

<h4>プロファイル写真の入力・更新</h4>
  <div class="button_wrapper">
    <button class="button">
    <%= f.file_field :avatar, class: "panel-body" %>
    <%= f.hidden_field :avatar_cache %>
  </div>
</div>
</div>

<br>


<div class="col-md-3 col-sm-6 col-xs-12">
<div class="profile-image">

 <div class="field">
  <%= f.label :メールアドレス %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control" %>
 </div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
 <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

</div>
</div>
</div>
</div>


<section class="function container-fluid">
  <div class="row">
<h3>パスワードの確認・変更</h3>
<div class="password-images">


<div class="col-md-3 col-sm-6 col-xs-12">
<div class="password-image">
   <%= f.label :現在のパスワード %> <i>(現在のパスワードを入力してください)</i><br />
   <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
</div>
</div>

<div class="col-md-3 col-sm-6 col-xs-12">
<div class="password-image">
    <%= f.label :新しいパスワード %> <i>(変更しない場合は入力不要です)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> 文字必要です</em>
    <% end %>
</div>
</div>

<div class="col-md-3 col-sm-6 col-xs-12">
<div class="password-image">
    <%= f.label :新しいパスワードの確認 %><i>(もう一度入力してください)</i＞<br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
</div>
</div>
</div>
<div class="actions">
  <%= f.submit "更新", class: "btn btn-primary btn-block" %>
</div>
<% end %>
<hr>
<h4>アカウントの削除</h4>
<p>アカウトを削除しますか? <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "本当に削除してもいいですか?" }, method: :delete %></p>

</div>
</div>
